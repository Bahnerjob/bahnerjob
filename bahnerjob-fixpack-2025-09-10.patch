@@ -0,0 +1,98 @@
+@tailwind base;
+@tailwind components;
+@tailwind utilities;
+
+/* === Global Dark Theme === */
+:root {
+  --color-bg: #0a0a0a;
+  --color-fg: #fafafa;
+  --color-muted: #9ca3af;
+  --color-accent: #f59e0b; /* amber-500 */
+}
+
+html, body {
+  height: 100%;
+  background: var(--color-bg);
+  color: var(--color-fg);
+  font-family: var(--font-inter), sans-serif;
+}
+
+a {
+  color: inherit;
+  text-decoration: none;
+}
+
+h1, h2, h3, h4 {
+  font-family: var(--font-inter), sans-serif;
+  font-weight: 600;
+}
+
+/* === Layout Utilities === */
+.container {
+  max-width: 1280px;
+  margin: 0 auto;
+  padding: 0 1rem;
+}
+
+.btn {
+  display: inline-flex;
+  align-items: center;
+  justify-content: center;
+  border-radius: 0.5rem;
+  font-weight: 500;
+  transition: background 0.15s;
+}
+
+.btn-accent {
+  background: var(--color-accent);
+  color: #000;
+}
+
+.input, .textarea, select {
+  background: #0d0d0d;
+  border: 1px solid #1f1f1f;
+  border-radius: 0.5rem;
+  padding: 0.5rem 0.75rem;
+  color: var(--color-fg);
+}
+
+.input:focus, .textarea:focus, select:focus {
+  outline: none;
+  border-color: var(--color-accent);
+}
+
+.label {
+  font-size: 0.9rem;
+  color: var(--color-muted);
+  font-weight: 500;
+}
+
+.card {
+  border-radius: 0.75rem;
+  border: 1px solid #1f1f1f;
+  background: rgba(15,15,15,0.5);
+  padding: 1rem;
+}
+
+/* === Header/Footer === */
+header {
+  border-bottom: 1px solid #1f1f1f;
+  background: #0d0d0d;
+}
+
+footer {
+  border-top: 1px solid #1f1f1f;
+  background: #0d0d0d;
+  color: var(--color-muted);
+  font-size: 0.85rem;
+  padding: 2rem 1rem;
+  text-align: center;
+}
+
+/* === Bahnerjob Fix Pack 2025-09-10 === */
+.bj-new .form-grid,
+.bj-new .row-2 { align-items: start; }
+.bj-new .label {
+  white-space: nowrap;
+  overflow: hidden;
+  text-overflow: ellipsis;
+  font-size: .92rem;
+}
+.bj-new .input,
+.bj-new select,
+.bj-new .textarea,
+.bj-new .field { min-width: 0; }
+.bj-new .counter { opacity: .8; }
+.bj-new .row-end { margin-top: 6px; }
+.card { will-change: transform; }
+.btn:hover { background: rgba(255, 255, 255, 0.08); }
