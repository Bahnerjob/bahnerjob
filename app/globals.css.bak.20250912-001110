  font-size:12px;
}

/* Headings rhythm */
.h1-bj { @apply text-3xl sm:text-5xl font-semibold tracking-tight; letter-spacing:-0.01em; }
.h2-bj { @apply text-xl sm:text-2xl font-semibold; letter-spacing:-0.01em; }

/* Header minimal border, kein Blau/Lila */
.site-header {
  border-bottom: 1px solid rgb(var(--divider) / 0.4);
  background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0));
